{
    "plugin_alias": "homebridge-august-smart-locks",
    "schema": {
		"type": "object",
		"properties": {
			"platform": {
                "title": "Platform",
                "type": "string",
                "const": "AugustLock2",
                "readOnly": true
            },
			"email": {
				"title": "Email",
				"type": "string",
				"required": true
			},
			"phone": {
				"title": "Phone",
				"type": "string",
				"required": false
			},
			"password": {
				"title": "Password",
				"type": "string",
				"required": true
			},
			"code": {
				"title": "2FA Code",
				"type": "string",
				"required": false
			},
			"securityToken": {
				"title": "Security Token",
				"type": "string",
				"required": false
			},
			"installId": {
				"title": "Installation ID",
				"type": "string",
				"required": true
			},
			"hideLocks": {
				"title": "Lock ID's to Hide separated by ','",
				"type": "string",
				"required": false
			},
			"longPoll": {
				"title": "Long Poll Duration (Seconds)",
				"type": "number",
				"required": false
			},
			"shortPoll": {
				"title": "Short Poll Duration (Seconds)",
				"type": "number",
				"required": false
			}
		}
	}
}